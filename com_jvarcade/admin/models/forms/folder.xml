<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="parentid"
			type="folders"
			label="COM_JVARCADE_FOLDERS_PARENT"
		/>
		<field
			name="name"
			type="text"
			label="COM_JVARCADE_FOLDERS_NAME"
			size="25"
		/>
		<field
			name="alias"
			type="text"
			label="COM_JVARCADE_FOLDERS_ALIAS"
			description="COM_JVARCADE_FOLDERS_ALIAS_DESC"
			size="25"
		/>
		<field
			name="image"
			type="file"
			accept="image/*"
			label="COM_JVARCADE_FOLDERS_IMAGE"
			description="COM_JVARCADE_FOLDERS_IMAGE_DESC"
		/>
		<field
			name="description"
			type="editor"
			cols="50"
			rows="25"
			label="COM_JVARCADE_FOLDERS_DESCRIPTION"
		/>
		<field
			name="published"
			type="radio"
			class="btn-group btn-group-yesno"
			default="1"
			label="COM_JVARCADE_FOLDERS_PUBLISHED"
		>
		<option value="1">JYES</option>
		<option value="0">JNO</option>
		</field>
		<field
			name="viewpermissions"
			type="usergrouplist"
			multiple="true"
			label="COM_JVARCADE_FOLDERS_VIEWPERMISSIONS"
		/>
		
	</fieldset>
</form>